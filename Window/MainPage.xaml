                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Dungeon Multiplier:"/>
                        <TextBox Name="dungeonCount" MinWidth="30" VerticalAlignment="Center" Margin="0"
                                 PreviewTextInput="PositiveIntSize3_PreviewTextInput" DataObject.Pasting="PositiveIntSize3_Pasting">100</TextBox>
                        <TextBlock Text="%"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Overworld Boss Multiplier:"/>
                        <TextBox Name="fieldBossCount" MinWidth="30" VerticalAlignment="Center" Margin="0"
                                 PreviewTextInput="PositiveIntSize3_PreviewTextInput" DataObject.Pasting="PositiveIntSize3_Pasting">100</TextBox>
                        <TextBlock Text="%"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Dungeon Boss Multiplier:"/>
                        <TextBox Name="dungeonBossCount" MinWidth="30" VerticalAlignment="Center" Margin="0"
                                 PreviewTextInput="PositiveIntSize3_PreviewTextInput" DataObject.Pasting="PositiveIntSize3_Pasting">100</TextBox>
                        <TextBlock Text="%"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Count Min/Max:"/>
                        <TextBox Name="countClampMin" VerticalAlignment="Center" Margin="0"
                                 PreviewTextInput="NonNegIntSize2_PreviewTextInput" DataObject.Pasting="NonNegIntSize2_Pasting">0</TextBox>
                        <TextBlock Text="-" Margin="0" VerticalAlignment="Center"/>
                        <TextBox Name="countClampMax" VerticalAlignment="Center" Margin="0"
                                 PreviewTextInput="PositiveIntSize2_PreviewTextInput" DataObject.Pasting="PositiveIntSize2_Pasting">5</TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="First Pal Min/Max:"/>
                        <TextBox Name="countClampFirstMin" VerticalAlignment="Center" Margin="0"
                                 PreviewTextInput="NonNegIntSize2_PreviewTextInput" DataObject.Pasting="NonNegIntSize2_Pasting">1</TextBox>
                        <TextBlock Text="-" Margin="0" VerticalAlignment="Center"/>
                        <TextBox Name="countClampFirstMax" VerticalAlignment="Center" Margin="0"
                                 PreviewTextInput="PositiveIntSize2_PreviewTextInput" DataObject.Pasting="PositiveIntSize2_Pasting">5</TextBox>
                    </StackPanel>
                </WrapPanel>
            </GroupBox>
            <WrapPanel Margin="0,0,0,5">
                <CheckBox Name="nightOnly" IsChecked="True">Nocturnal Pals Are Night-Only (Overworld)</CheckBox>
                <CheckBox Name="nightOnlyDungeons">Nocturnal Pals Are Night-Only (Dungeons)</CheckBox>
                <CheckBox Name="nightOnlyDungeonBosses">Nocturnal Pals Are Night-Only (Dungeon Bosses)</CheckBox>
                <CheckBox Name="nightOnlyBosses">Nocturnal Pals Are Night-Only (Overworld Bosses)</CheckBox>
            </WrapPanel>
            <WrapPanel Margin="0,0,0,5">
                <CheckBox Name="autoSaveTemplate" IsChecked="True">Auto-Restore Settings</CheckBox>
                <CheckBox Name="outputLog" IsChecked="False">Generate Log Text File</CheckBox>
            </WrapPanel>
            <TextBlock Margin="0"></TextBlock>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <WrapPanel Margin="5,10,0,0">
                    <Button Name="savePak" Click="SavePak_Click">
                        <TextBlock Margin="5,2,5,2" Text="Randomize And Save PAK..."/>
                    </Button>
                    <Button Click="ViewSpawns_Click" Margin="10,0,10,0">
                        <TextBlock Margin="5,2,5,2">Open Spawn Editor</TextBlock>
                    </Button>
                </WrapPanel>
                <WrapPanel Margin="5,10,0,0" Grid.Column="2" HorizontalAlignment="Right">
                    <Button Name="saveTemplate" Click="SaveTemplate_Click">
                        <TextBlock Margin="5,2,5,2" Text="Save Template..."/>
                    </Button>
                    <Button Name="loadTemplate" Margin="10,0,10,0" Click="LoadTemplate_Click">
                        <TextBlock Margin="5,2,5,2">Apply Template...</TextBlock>
                    </Button>
                </WrapPanel>
            </Grid>
        </StackPanel>
